

# ==========================================
# Investment Portfolio Management System
# Frontend Environment Configuration
# ==========================================

# === API CONFIGURATION ===
# ГЛАВНОЕ ИЗМЕНЕНИЕ: порт 8080 вместо 8000
REACT_APP_API_URL=http://127.0.0.1:8080/api/v1

# === ENVIRONMENT ===
REACT_APP_ENV=development
REACT_APP_VERSION=1.0.0

# === DEBUG & DEVELOPMENT ===
REACT_APP_DEBUG=true
SKIP_PREFLIGHT_CHECK=true
GENERATE_SOURCEMAP=false
TSC_COMPILE_ON_ERROR=true

# === FEATURE FLAGS ===
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_OPTIMIZATION=true
REACT_APP_ENABLE_RISK_MANAGEMENT=true
REACT_APP_ENABLE_SCENARIOS=true
REACT_APP_ENABLE_REPORTS=true

# === PERFORMANCE ===
FAST_REFRESH=true